@page "/MyCustomLoginPage"

@inherits MyCustomLoginPageBase
@if (!IsAuthenticated)
{

<h1>My Custom Login Page</h1>
<div>
    <div class="form-group">
        <input @bind="UserName" class="form-control" type="text" placeholder="Username" name="email" autocomplete="off">
    </div>
    <div class="form-group">
        <input @bind="Password" class="form-control" type="password" placeholder="Password" name="password">
    </div>
    <div>
        <button @onclick="ProcessLogin" class="btn btn-focus btn-primary">
            Sign In
        </button>
    </div>
</div>

}

